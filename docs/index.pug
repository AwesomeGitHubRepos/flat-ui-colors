doctype
html(lang='en')
	head
		meta(charset='utf-8')
		title Flat UI Colors
		link(href="https://fonts.googleapis.com/css?family=Muli:300,400,400i,600,700", rel="stylesheet")
		meta(name="description", content="A collection of flat colors for UI using Material Design")
		link(rel="stylesheet", type="text/css" href="css/styles.css")
		link(rel="icon", href="favicon.png")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
	body
		header.Header
			div.Header_Details
				h1.Header_Title Flat UI Colors
				p.Header_Description A beautiful collection of colors for modern interfaces
			div.Header_Right
				a.Button.Button--secondary(href="https://github.com/mildrenben/flat-ui-colors") Github
				a.Button.Button--primary(href="https://github.com/mildrenben/flat-ui-colors/releases/download/1.02/Flat-ui-colors-v1.02.zip") Download
		main.Main
			div.Main_Wrapper
				each color in colors
					div(class="Color Color--" + color.name)
						- var displayName = color.name.replace(/([A-Z])/g, ' $1').trim()
						input(class="Color_Input Color_Input--"  + color.name, type="text", readonly, value=color.hex)
						span.Color_Name #{displayName}
				span.Main_Tip Click to copy
		section.PostMain
			div.PostMain_Wrapper
				a.Button.Button--secondary(href="https://github.com/mildrenben/flat-ui-colors") Github
				a.Button.Button--primary Download
		footer.Footer
			span.Footer_Left Made by 
				a.Footer_Link(href="http://benmildren.com") Ben Mildren
			div.Footer_Right
				a.Footer_Link(href="https://twitter.com/mildrenben") Twitter
				a.Footer_Link(href="mailto:mildrenben@gmail.com") Email
		script.
			var colors = document.getElementsByClassName('Color');
			var mainWrapper = document.getElementsByClassName('Main_Wrapper')[0];
			function copiedMessage (hex) {
				var newCopied = document.createElement('div');
				var newSwatch = document.createElement('span');
				var newHex = document.createElement('span');
				newCopied.className = 'Main_Copied';
				newSwatch.className = 'Main_Copied_Swatch';
				newHex.className = 'Main_Copied_Hex';
				newCopied.appendChild(newSwatch);
				newCopied.appendChild(newHex);
				newSwatch.style.backgroundColor = hex;
				newHex.textContent = hex + ' copied'
				mainWrapper.appendChild(newCopied);
				setTimeout(function() {
					// Moves to the top of the stack so it applies the animation
					newCopied.classList.add('Main_Copied--shown');
				}, 0);
				setTimeout(function() {
					newCopied.classList.remove('Main_Copied--shown');
				}, 4000);
				setTimeout(function() {
					mainWrapper.removeChild(newCopied);
				}, 4300);
			}
			for(var i = 0; i < colors.length; i++) {
				colors[i].addEventListener('click', function() {
					var input = this.firstChild;
					input.select();
					document.execCommand('copy');
					copiedMessage(input.value);
				});
			}
